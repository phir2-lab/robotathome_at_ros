<?xml version="1.0"?>
<package format="2">
  <name>robotathome_at_ros</name>
  <version>1.0.0</version>
  <description>
  This package contains programs to create and launch ROS bagfiles using the data provided 
  in the Robot@Home dataset (generated by the MAPIR group from Universidad de Malaga, 
  http://mapir.isa.uma.es/mapirwebsite/index.php/mapir-downloads/203-robot-at-home-dataset.html).
  Separate bagfiles are created from laser and RGB-D data. 
  </description>

  <!-- One maintainer tag required, multiple allowed, one person per tag -->
  <maintainer email="rqmaffei@inf.ufrgs.br">Renan Maffei</maintainer>

  <!-- One license tag required, multiple allowed, one license per tag -->
  <license>MIT</license>

  <!-- Author tags are optional, multiple are allowed, one per tag -->
  <author email="rqmaffei@inf.ufrgs.br">Renan Maffei</author>

  <buildtool_depend>catkin</buildtool_depend>
  <build_depend>roscpp</build_depend>
  <build_depend>rospy</build_depend>
  <build_depend>std_msgs</build_depend>
  <build_depend>sensor_msgs</build_depend>
  <build_depend>cv_bridge</build_depend>
  <build_depend>image_transport</build_depend>
  <build_depend>opencv2</build_depend>

  <exec_depend>roscpp</exec_depend>
  <exec_depend>rospy</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>sensor_msgs</exec_depend>
  <exec_depend>cv_bridge</exec_depend>
  <exec_depend>image_transport</exec_depend>
  <exec_depend>opencv2</exec_depend>

</package>
